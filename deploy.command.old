if [ -z "$JETTY_INSTALL" ]; then
  echo "JETTY_INSTALL not set. Using the script default."
  JETTY_INSTALL="./jetty-distribution-9.2.10.v20150310"
fi

echo "JETTY_INSTALL is set to '$JETTY_INSTALL'"

cp ./escala_rest_apis/target/escala_apis-0.0.1-SNAPSHOT.war "$JETTY_INSTALL/webapps/escala.war"

if [ ! -d "$JETTY_INSTALL/webapps/client" ]; then
  mkdir "$JETTY_INSTALL/webapps/client"
fi
cp -r ./escala_client/WebContent/* "$JETTY_INSTALL/webapps/client"

cp ./escala-util-servlets/target/escala-util-0.0.1-SNAPSHOT.war "$JETTY_INSTALL/webapps/escala-util.war"

echo "Script finished successfully"

